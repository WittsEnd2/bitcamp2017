<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.css.cssapp">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:windowSoftInputMode="adjustNothing">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoggedActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".RegistrationActivity" />
        <activity android:name=".WAHF" />
        <activity
            android:name=".ProjectForm"
            android:label="@string/title_activity_project_form"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DashboardUser"
            android:label="@string/title_activity_dashboard_user"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DashboardLeader"
            android:label="@string/title_activity_dashboard_leader"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ChatScreen"
            android:label="@string/title_activity_chat_screen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DashboardLeaderSecond"
            android:label="@string/title_activity_dashboard_leader_second"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>